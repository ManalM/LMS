<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".my_privite_file">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rectangle"
        android:layout_margin="10dp"
        android:paddingBottom="15dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo_priv_file"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="-3dp"
            android:src="@drawable/logo" />

        <EditText
            android:id="@+id/edit_curr_pass"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/back_rectang_no_radius"
           android:hint="  Browse file to appear here"
            android:textColor="#FF7E7D7D"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btn_brows_file"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_weight="1"
            android:background="@drawable/style_login"
            android:text="Brows file"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#fff"
            android:textSize="16dp" />



        <LinearLayout
            android:id="@+id/lin_regis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_pass_again"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="70dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_save_change"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/style_login"
                android:text="@string/save"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#fff"
                android:textSize="12dp" />

            <Button
                android:id="@+id/btn_cancle_change"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/style_login"
                android:text="@string/cancel"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#fff"
                android:textSize="12dp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>