<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".course_outline">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="3dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_cour_coord"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/style_login"
                    android:drawableLeft="@drawable/coordinator"
                    android:onClick="click_cour_coord"
                    android:paddingBottom="5dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:text="@string/course_coordinator"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    tools:ignore="OnClick" />

                <Button
                    android:id="@+id/btn_cour_announ"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/style_login"
                    android:drawableLeft="@drawable/announcement"
                    android:onClick="click_btn_cour_announ"
                    android:paddingBottom="5dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:text="@string/course_announcement"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    tools:ignore="OnClick" />

                <Button
                    android:id="@+id/btn_cour_calender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/style_login"
                    android:drawableLeft="@drawable/calender"
                    android:onClick="click_btn_cour_calender"
                    android:paddingBottom="5dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:text="@string/course_calendar"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    tools:ignore="OnClick" />

                <Button
                    android:id="@+id/btn_mta_exame"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/style_login"
                    android:drawableLeft="@drawable/exam"
                    android:onClick="click_btn_mta_exame"
                    android:paddingBottom="5dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:text="@string/MTA_Exam_Coverage"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    tools:ignore="OnClick" />

                <Button
                    android:id="@+id/btn_cour_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/style_login"
                    android:drawableLeft="@drawable/content"
                    android:onClick="click_btn_cour_content"
                    android:paddingBottom="5dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:text="@string/course_content"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    tools:ignore="OnClick" />

                <Button
                    android:id="@+id/btn_forum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/style_login"
                    android:drawableLeft="@drawable/forum"
                    android:onClick="click_btn_forum"
                    android:paddingBottom="5dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:text="@string/forum"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    tools:ignore="OnClick" />

                <Button
                    android:id="@+id/btn_survery_answer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/style_login"
                    android:drawableLeft="@drawable/survey"
                    android:onClick="click_btn_survery_answer"
                    android:paddingBottom="5dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:text="Survey and answer"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    tools:ignore="OnClick" />

                <Button
                    android:id="@+id/btn_assign"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/style_login"
                    android:drawableLeft="@drawable/assign"
                    android:onClick="click_btn_assign"
                    android:paddingBottom="5dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:text="@string/assignment"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    tools:ignore="OnClick" />

                <Button
                    android:id="@+id/btn_attendance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/style_login"
                    android:drawableLeft="@drawable/attendance"
                    android:onClick="click_btn_attendance"
                    android:paddingBottom="5dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:text="@string/attendance"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    tools:ignore="OnClick" />

                <Button
                    android:id="@+id/btn_cour_grades"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginBottom="2dp"
                    android:background="@drawable/style_login"
                    android:drawableLeft="@drawable/grades"
                    android:onClick="click_btn_cour_grades"
                    android:paddingBottom="5dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:text="@string/course_grades"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    tools:ignore="OnClick" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>